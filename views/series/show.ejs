<%- include("../partials/header") -%>

<div class="module-header">
    <h4 class="module-title"><%= foundSerie.title %></h4>
</div>

<div class="row justify-content-around">
    <div class="col-md-8">
        <div class="accordion" id="series">
            <div class="card">
                <div class="card-header" id="headingOne">
                    <h2 class="mb-0">
                        <button class="btn btn-link collapsed" type="button" data-toggle="collapse" data-target="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
                            Serie details
                        </button>
                    </h2>
                </div>
                <div id="collapseOne" class="collapse show" aria-labelledby="headingOne" data-parent="#series">
                    <div class="card-body">
                        <div class="row form-group justify-content-between">
                            <div class="col-md-2 align-self-center">
                                <strong>Acteurs:</strong>
                            </div>
                            <div class="col-md-10 align-self-center">
                                <%= foundSerie.actors %>
                            </div>
                        </div>
                        <div class="row form-group justify-content-between">
                            <div class="col-md-2 align-self-center">
                                <strong>Genres:</strong>
                            </div>
                            <div class="col-md-10 align-self-center">
                                <%= foundSerie.genre %>
                            </div>
                        </div>
                        <div class="row form-group justify-content-between">
                            <div class="col-md-2">
                                <strong>Ondertitels:</strong>
                            </div>
                            <div class="col-md-3">
                                <% if(foundSerie.subs == "NL") { %>
                                    Nederlands
                                <% } else if(foundSerie.subs == "EN") { %>
                                    Engels
                                <% } else { %>
                                    Ander
                                <% } %>
                            </div>
                            <div class="col-md-3">
                                <strong>Classificatie:</strong>
                            </div>
                            <div class="col-md-4">
                                <%= foundSerie.classification %>
                            </div>
                        </div>
                        <div class="row form-group justify-content-between">
                            <div class="col-md-2 align-self-center">
                                <strong>Status:</strong>
                            </div>
                            <div class="col-md-3 align-self-center">
                                <%= foundSerie.status %>
                            </div>
                            <div class="col-md-3 align-self-center">
                                <strong>Huidig seiszoen:</strong>
                            </div>
                            <div class="col-md-4 align-self-center">
                                <%= foundSerie.currentSeason %>
                            </div>
                        </div>
                        <div class="row justify-content-between">
                            <div class="col align-self-center">
                                <strong>Plot:</strong>
                            </div>
                        </div>
                        <div class="row justify-content-between">
                            <div class="col align-self-center">
                                <%= foundSerie.plot %>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="card">
                <div class="card-header" id="headingTwo">
                    <h2 class="mb-0">
                        <button class="btn btn-link collapsed" type="button" data-toggle="collapse" data-target="#collapseTwo" aria-expanded="false" aria-controls="collapseTwo">
                            Aanvullende gegevens
                        </button>
                    </h2>
                </div>
                <div id="collapseTwo" class="collapse" aria-labelledby="headingTwo" data-parent="#series">
                    <div class="card-body">
                        <div class="row form-group justify-content-between">
                            <div class="col-md-2 align-self-center">
                                <strong>Regiseur:</strong>
                            </div>
                            <div class="col-md-10 align-self-center">
                                <%= foundSerie.director %>
                            </div>
                        </div>
                        <div class="row form-group justify-content-between">
                            <div class="col-md-2 align-self-center">
                                <strong>Jaren:</strong>
                            </div>
                            <div class="col-md-3 align-self-center">
                                <%= foundSerie.airDate %>
                            </div>
                            <div class="col-md-2 align-self-center">
                                <strong>IMDb:</strong>
                            </div>
                            <div class="col-md-1 align-self-center">
                                <%= foundSerie.ratingIMDb %>
                            </div>
                            <div class="col-md-2 align-self-center">
                               <strong>Speelduur:</strong>
                            </div>
                            <div class="col-md-2 align-self-center">
                                <%= foundSerie.runningTime %> min
                            </div>
                        </div>
                        <div class="row form-group justify-content-between">
                            <div class="col-md-2 align-self-center">
                                <strong>Herkomst:</strong>
                            </div>
                            <div class="col-md-3 align-self-center">
                                <%= foundSerie.country %>
                            </div>
                            <div class="col-md-3 align-self-center">
                                <strong>Gesproken:</strong>
                            </div>
                            <div class="col-md-4 align-self-center">
                                <%= foundSerie.language %>
                            </div>
                        </div>
                        <div class="row form-group justify-content-between">
                            <div class="col-md-2 align-self-center">
                                <strong>Website:</strong>
                            </div>
                            <div class="col-md-10 align-self-center">
                                <a href="<%= foundSerie.url %>" target="_Blank"><%= foundSerie.url %></a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="card">
                <div class="card-header" id="headingThree">
                    <h2 class="mb-0">
                        <button class="btn btn-link collapsed" type="button" data-toggle="collapse" data-target="#collapseThree" aria-expanded="false" aria-controls="collapseThree">
                            Persoonlijk
                        </button>
                    </h2>
                </div>
                <div id="collapseThree" class="collapse" aria-labelledby="headingThree" data-parent="#series">
                    <div class="card-body">
                        <div class="row form-group justify-content-between">
                            <div class="col-md-2 align-self-center">
                                <strong>Locatie:</strong>
                            </div>
                            <div class="col-md-10 align-self-center">
                                <%= foundSerie.locationOnDisk %>
                            </div>
                        </div>
                        <div class="row form-group justify-content-between">
                            <div class="col-md-2 align-self-center">
                                <strong>Omvang:</strong>
                            </div>
                            <div class="col-md-2 align-self-center">
                                <%= foundSerie.sizeOnDisk %>
                            </div>
                            <div class="col-md-1 align-self-center">
                                GB
                            </div>
                            <div class="col-md-3 align-self-center">
                                <strong>Volgende:</strong>
                            </div>
                            <div class="col-md-4 align-self-center">
                                
                                <%= typeof foundSerie.nextAirDate !== 'undefined' ? foundSerie.nextAirDate.split("-")[2] - foundSerie.nextAirDate.split("-")[1] - foundSerie.nextAirDate.split("-")[0] : "" %>

                            </div>
                        </div>
                        <div class="row form-group justify-content-between">
                            <div class="col-md-2 align-self-center">
                                <strong>In Kodi:</strong>
                            </div>
                            <div class="col-md-3 align-self-center">
                                <%= typeof  foundSerie.registerdInKodi !== 'undefined' && foundSerie.registerdInKodi.toString() == "true" ? 'Correct' : '' %>
                            </div>
                            <div class="col-md-3 align-self-center">
                                <strong>Serie totaal gezien:</strong>
                            </div>
                            <div class="col-md-4 align-self-center">
                                <%= typeof  foundSerie.seenAllEpisodes !== 'undefined' && foundSerie.seenAllEpisodes.toString() == "true" ? 'Correct' : '' %>
                            </div>
                        </div>
                        <div class="row justify-content-between">
                            <div class="col align-self-center">
                                <strong>Persoonlijke notities:</strong>
                            </div>
                        </div>
                        <div class="row justify-content-between">
                            <div class="col align-self-center">
                                <%= foundSerie.personalNotes %>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="row form-group">
            <div class="col">
               
            </div>
            <div class="col">
                <a class="form-control but but-deep-brown" href="/">Home</a>
            </div>
            <div class="col">
                
            </div>
        </div>
    </div>
    <div class="col-md-4 d-flex justify-content-end">
        <img src="<%= path %>/<%= foundSerie.title %>.jpg" alt="<%= foundSerie.title %>" width="300" height="460">
    </div>
</div>

<%- include("../partials/footer") -%>